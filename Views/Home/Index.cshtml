@{
    ViewBag.Title = "Вибір книг";
}
@model IEnumerable<WebApplication3.Models.Book>

<div class="row" style="margin:0px;">
    <div class="col-md-4 col-lg-3">
        <form method="get" action="@Url.Action("Search", "Home")">
            <div style="border:1px solid green; margin-top:30px;margin-bottom:40px; padding:10px;">

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Назва</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Name" placeholder="Введіть назву книги">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-3 col-form-label">Автор</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Author" placeholder="Введіть автора книги">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Жанр</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Genre" placeholder="Введіть жанр, тематику або тег">
                    </div>
                </div>

                <div class="text-center" style="margin-bottom:15px;"><h6>Період видання книги</h6></div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Почато</label>
                    <div class="col-sm-9">
                        <input type="date" class="form-control" name="FromDate">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Закінчено</label>
                    <div class="col-sm-9">
                        <input type="date" class="form-control" name="UntilDate">
                    </div>
                </div>

                <div class="text-center"><button class="btn btn-success" type="submit">Шукати книгу</button></div>
            </div>
        </form>
    </div>
    <div class="col-md-8 col-lg-7">
        <h5>
            Книги доступні для резервування 
        </h5>
        <span class="text-info" style="margin-bottom:15px;"> 
        @("     " + TempData["ReservationMessage"] ?? "")</span>
        @if (Model.Count() != 0)
        {
            foreach (var book in Model)
            {
                <div style="border: 1px solid green; margin-bottom:20px; padding:5px;">
                    <h3>@book.Name</h3>
                    <p>@book.Author</p>
                    <p>@book.Date.Date.ToShortDateString()</p>
                    <p>
                        Жанр :
                        @foreach (var genre in book.Genres)
                        {
                            @(genre + ",   ")
                        }
                        <a class="btn btn-sm btn-success" style="float:right"
                           href="@Url.Action("Reservation", "Reservation", new { BookId = book.Id})">Зарезервувати</a>
                    </p>
                </div>
            }
        }
    </div>

    <div class="text-center">

    </div>
</div>