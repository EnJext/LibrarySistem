

<nav class="navbar navbar-expand fixed-top navbar-light bg-light">

    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Книги</a>
            </li>
        </ul>

        @if (!Context.User.Identity.IsAuthenticated)
        {
            <span class="navbar-text">
                <a class="btn btn-outline-success" href="@Url.Action("Login","User")">Вхід / Реєстрація</a>
            </span>
        }
        else if (Context.User.Identity.IsAuthenticated)
        {
            <div class="btn-group">
                <button type="button" class="btn btn-outline-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @Context.User.Identity.Name
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="@Url.Action("Index","Reservation")">Зарезервовані книги</a>
                    <a class="dropdown-item" href="@Url.Action("History", "Home")">Історія резервувань</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="@Url.Action("Logoff", "User")">Вихід</a>
                </div>
            </div>
        }

    </div>

</nav>
